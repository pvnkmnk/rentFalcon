# =============================================================================
# Rental Scanner Application - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=development
# Options: development, production, testing, docker

SECRET_KEY=change-this-to-a-random-secret-key
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"

DEBUG=false
# Set to true only in development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For SQLite (Single User / Development)
DATABASE_URL=sqlite:///rental_scanner.db

# For PostgreSQL (Multi-User / Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/rental_scanner

# PostgreSQL Settings (for Docker deployment)
POSTGRES_DB=rental_scanner
POSTGRES_USER=rental_user
POSTGRES_PASSWORD=change-this-password
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Celery Configuration (if using background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Rental Scanner
APP_VERSION=2.0.0

# Multi-User Mode
MULTI_USER_ENABLED=false
# Set to true to enable user accounts and authentication

REQUIRE_LOGIN=false
# Set to true to require login for all features

MAX_SAVED_SEARCHES_PER_USER=10
# Maximum number of saved searches per user

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================
# Comma-separated list of enabled scrapers
ENABLED_SCRAPERS=kijiji,realtor,rentals,viewit,apartments
# Available: kijiji, realtor, rentals, viewit, apartments, facebook, zillow

SCRAPER_TIMEOUT=30
# Request timeout in seconds

SCRAPER_MAX_RETRIES=3
# Number of retry attempts for failed requests

SCRAPER_DELAY=1
# Delay between requests in seconds (for rate limiting)

# Debug Options
SAVE_DEBUG_HTML=false
# Set to true to save HTML responses for debugging

DEBUG_OUTPUT_DIR=debug_output
# Directory to save debug HTML files

# =============================================================================
# EMAIL CONFIGURATION (for notifications and reports)
# =============================================================================
MAIL_ENABLED=false
# Set to true to enable email notifications

MAIL_SERVER=smtp.gmail.com
# SMTP server address

MAIL_PORT=587
# SMTP server port (587 for TLS, 465 for SSL)

MAIL_USE_TLS=true
# Use TLS encryption

MAIL_USE_SSL=false
# Use SSL encryption (typically use TLS instead)

MAIL_USERNAME=your-email@gmail.com
# Email account username

MAIL_PASSWORD=your-app-password
# Email account password or app-specific password
# For Gmail, generate an app password: https://myaccount.google.com/apppasswords

MAIL_DEFAULT_SENDER=noreply@rentalscanner.local
# Default sender email address

# =============================================================================
# LISTING CONFIGURATION
# =============================================================================
LISTINGS_PER_PAGE=25
# Number of listings to show per page

MAX_SEARCH_RESULTS=100
# Maximum number of results to return per search

LISTING_EXPIRY_DAYS=7
# Number of days before marking listings as expired

# =============================================================================
# REPORT CONFIGURATION
# =============================================================================
REPORT_MAX_LISTINGS=50
# Maximum number of listings to include in reports

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
SCHEDULER_TIMEZONE=America/Toronto
# Timezone for scheduled tasks (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)

# =============================================================================
# API KEYS (for external services)
# =============================================================================
# Facebook Marketplace (requires complex setup with Selenium)
FACEBOOK_ACCESS_TOKEN=

# RapidAPI or other API services (if using unofficial APIs)
RAPIDAPI_KEY=

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
# Enable rate limiting for scrapers

RATE_LIMIT_PER_SCRAPER=10 per minute
# Rate limit per scraper source

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=rental_scanner.log
# Log file path

LOG_MAX_BYTES=10485760
# Maximum log file size in bytes (10MB)

LOG_BACKUP_COUNT=5
# Number of backup log files to keep

# =============================================================================
# WEB SERVER CONFIGURATION (for production deployment)
# =============================================================================
WEB_PORT=5000
# Port for the web application

WEB_HOST=0.0.0.0
# Host address (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)

WORKERS=2
# Number of Gunicorn workers (for production)

THREADS=4
# Number of threads per worker

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SESSION_COOKIE_SECURE=false
# Set to true in production with HTTPS

SESSION_COOKIE_HTTPONLY=true
# Prevent JavaScript access to session cookies

WTF_CSRF_ENABLED=true
# Enable CSRF protection

BCRYPT_LOG_ROUNDS=12
# BCrypt password hashing rounds (higher = more secure but slower)

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TYPE=simple
# Options: simple (in-memory), redis, memcached

CACHE_DEFAULT_TIMEOUT=300
# Cache timeout in seconds (5 minutes)

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# These should be disabled in production

FLASK_DEBUG=false
SQLALCHEMY_ECHO=false
# Set to true to log all SQL queries (useful for debugging)

# =============================================================================
# DOCKER-SPECIFIC SETTINGS
# =============================================================================
# These are used when running in Docker containers

COMPOSE_PROJECT_NAME=rental-scanner
# Docker Compose project name
